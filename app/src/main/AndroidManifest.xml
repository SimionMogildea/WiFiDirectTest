<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.musicsaround"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission
        android:name="android.permission.ACCESS_WIFI_STATE"
        android:required="true" />
    <uses-permission
        android:name="android.permission.CHANGE_WIFI_STATE"
        android:required="true" />
    <uses-permission
        android:name="android.permission.INTERNET"
        android:required="true" />
    <uses-permission
        android:name="android.permission.CHANGE_NETWORK_STATE"
        android:required="true" />
    <uses-permission
        android:name="android.permission.ACCESS_NETWORK_STATE"
        android:required="true" />

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.musicsaround.MainActivity"
            android:label="@string/app_name" android:screenOrientation="nosensor" android:theme="@android:style/Theme.Holo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.musicsaround.dj.DJActivity"
            android:label="@string/title_activity_dj" android:screenOrientation="nosensor" android:theme="@android:style/Theme.Holo">
        </activity>
        <activity
            android:name="com.example.musicsaround.speaker.SpeakerActivity"
            android:label="@string/title_activity_speaker" android:screenOrientation="nosensor" android:theme="@android:style/Theme.Holo">
        </activity>
        <activity
            android:name="com.example.musicsaround.WiFiDirectConnectActivity"
            android:label="@string/title_activity_wi_fi_direct2" android:screenOrientation="nosensor">
        </activity>
    </application>

</manifest>
